<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Demandes</title>
    <link rel="stylesheet" href="~/css/support.css">

</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h4 class="mb-1"><i class="bi bi-table me-2"></i>Liste des demandes</h4>
            <p class="text-muted mb-0">Gestion des demandes utilisateurs</p>
        </div>

        <div class="admin-card">
            <div class="table-container">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Nom de l'enseigne</th>
                            <th scope="col">Email</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col" class="text-center">Statut</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Enseigne Paris Nord</td>
                            <td>contact@parisnord.fr</td>
                            <td>01 45 78 92 34</td>
                            <td class="text-center"><span class="badge bg-warning status-badge">En attente</span></td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary action-btn">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>Boutique Lyon Centre</td>
                            <td>lyon@boutique.fr</td>
                            <td>04 78 12 45 96</td>
                            <td class="text-center"><span class="badge bg-success status-badge">Approuvé</span></td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary action-btn">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>Magasin Marseille</td>
                            <td>info@marseille-magasin.com</td>
                            <td>04 91 25 76 33</td>
                            <td class="text-center"><span class="badge bg-danger status-badge">Rejeté</span></td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary action-btn">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </td>
                        </tr>

                        @foreach(var u in Model)
                        {
                            <tr>
                                <td>@u.Nom_enseigne</td>
                                <td>@u.Email</td>
                                <td>@u.Telephone</td>
                                <td class="text-center">
                                    @{
                                        var statuses = new[] { "En attente", "Approuvé", "Rejeté" };
                                        var random = new Random().Next(0, 3);
                                        var statusClass = random == 0 ? "bg-warning" : (random == 1 ? "bg-success" : "bg-danger");
                                    }
                                    <span class="badge @statusClass status-badge">@statuses[random]</span>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-secondary action-btn">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        -->
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted small">
                Affichage de 3 éléments
            </div>
            
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Précédent</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Suivant</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>